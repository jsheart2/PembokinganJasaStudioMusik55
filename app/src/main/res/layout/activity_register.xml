<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#191970"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconLogin"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/studio" />

        <RelativeLayout
            android:id="@+id/form"
            android:layout_width="342dp"
            android:layout_height="280dp"
            android:layout_below="@+id/iconLogin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="29dp"
            android:background="@drawable/putih"
            android:elevation="3dp">

            <Button
                android:id="@+id/btn_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="122dp"
                android:layout_marginBottom="3dp"
                android:text="Register" />

            <EditText
                android:id="@+id/edtusername"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="13dp"
                android:ems="10"
                android:hint="Nama Grub Band"
                android:inputType="textPersonName"
                android:text="" />

            <EditText
                android:id="@+id/edtemail"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="184dp"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/edtpassword"
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="72dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/edtphone"
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="127dp"
                android:ems="10"
                android:hint="Nomer Telfon"
                android:inputType="phone" />

            <TextView
                android:id="@+id/txt_masuk"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="150dp"
                android:layout_marginLeft="150dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="54dp"
                android:gravity="end"
                android:text="Masuk Akun"
                android:textAlignment="textEnd"
                android:textColor="#191970"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="179dp"
            android:layout_marginBottom="435dp" />

        <TextView
            android:id="@+id/attantion"
            android:layout_width="336dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="34dp"
            android:layout_marginBottom="127dp"
            android:text="Sebelum melakukan boking liat terlebih dahulu Boking List!!"
            android:textColor="#FFFF" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>